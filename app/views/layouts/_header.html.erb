<header>
	<% if params[:controller] == 'users' && params[:action] == 'show' %>
		<%= link_to "Back", event_path(@user.event_id), class: 'back' %>
		
		<% if @user.phone != '' && @user.private_messages %>
		<a href="sms:<%=@user.phone.gsub(/[^0-9]/, '') %>;body=Hi, this is <%= @user.name %> from <%= truncate(@user.event_name, length: 15) %>. Want to meet?"><span class='fa fa-envelope' id='mail'>&nbsp;SMS</span></a>
		<% end %>
		<!-- <p class='current-room'><%#= truncate(@user.event_name, length: 30) %></p> -->
	<% else %>
		<span class="main-menu fa fa-list-ul"></span>
		
		<% if params[:controller] == 'events' %>
			<div class='page-title'><%= @chat.category %> - <%= truncate(@chat.event.name, length: 16)%>(<%=@chat.users.count%>)</div>
		<%else %>
		<%end %>
	<% end %>
</header>
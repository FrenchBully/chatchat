<!-- each message is rendered with this template -->

<!-- Set image url here -->
<!-- AVATAR IMAGE -->
<li class="other">


    

    <div class="avatar">
      <%if message.user.photo != nil%>
        <%=link_to image_tag(message.user.photo), user_path(message.user)%>
      <%else%>

        <%=link_to image_tag("http://blog.ramboll.com/fehmarnbelt/wp-content/themes/ramboll2/images/profile-img.jpg"), user_path(message.user)%>

      <%end%>
    </div>




    <div class="textcontentofmessage">
      <div class="chatboxmessagecontent">
        <p><%= message.body.html_safe %></p>
      </div>

      <div class="time-div">
        <time datetime="<%= message.created_at %>" title="<%= message.created_at.strftime("%d %b  %Y at %I:%M%p") %>">
          <%=message.user.name%> â€¢ <%=message.created_at.in_time_zone("Pacific Time (US & Canada)").strftime("%l:%M%p")%>
        </time>
      </div>
    </div>


</li>
<div class="container">

<div class="center">
	<%#= image_tag @user.photo, class: 'photo' %>
	<p class="apologies">Welcome, <%= @user.name %>! Please enter your email address to start chatting on <strong>Meta</strong>Meetup.</p>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%#= devise_error_messages! %>

  <div>
    <%= label_tag 'email' %>
    <%= f.email_field :email, autofocus: true, placeholder: 'Enter your email', class: 'expand center' %>
  </div>

  <!-- <div><%#= f.label :password %> <%# if @validatable %><i>(<%#= @minimum_password_length %> characters minimum)</i><%# end %><br />
    <%#= f.password_field :password, autocomplete: "off" %></div>

  <div><%#= f.label :password_confirmation %><br />
    <%#= f.password_field :password_confirmation, autocomplete: "off" %></div> -->

  <div><%= f.submit "Save", class: 'button expand' %></div>
<% end %>

<%#= render "devise/shared/links" %>
</div>